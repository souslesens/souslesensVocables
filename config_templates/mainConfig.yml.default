## server config

# the public url of souslesens (http[s]://fqdn[:port]))
souslesensUrl: http://localhost:3010

# port of express server
listenPort: '3010'

serverUrl: ../slsv  #FIXME: not used, will be removed in futur version

## Souslesens configuration

# list of default groups when a new user is created
defaultGroups: []

# directory used to store logs
logDir: logs

# name of the formal ontology source
formalOntologySourceLabel: ISO_15926-part-14_PCA

# List of tools available in the web interface
tools_available:
  - lineage
  - KGcreator
  - Standardizer
  - admin
  - ConfigEditor

# Secret used to sign the session ID cookie
cookieSecret: S3cRet!

# value for the SameSite Set-Cookie attribute
# can be true, false, 'lax', 'none', or 'strict'
cookieSameSite: false

# Number of milliseconds before the session cookie expires
cookieMaxAge: 2629800000

# Set to true if souslesens is served behind https
cookieSecure: false

# Set to true if souslesens is behind a proxy
cookieSecureTrustProxy: false

# Service that are watched in route /api/v1/health
health_enabled_services:
  - virtuoso
  - elasticsearch

## Authentication

# disabled, local, database or keycloak
auth: local

