## external services used by souslesens

# SQL server database
SQLserver:
  user: sa
  password: xxx
  server: xxx
  database: master
  trustServerCertificate: true

# SPARQL endpoint (virtuoso)
default_sparql_url: http://xxxxxxxx:8890/sparql  #FIXME: duplicate of sparql_server.url
sparql_server:
  url: http://xxxxxxxx:8890/sparql
  user: dba
  password: xxx

# ElasticSearch
ElasticSearch:
  url: https://xxxxxxxx:9200/
  user: elastic
  password: xxx
  # Set to true if elasticSearch use a self-signed certificate
  skipSslVerify: false

# Annotator services
